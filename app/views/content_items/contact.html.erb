<% content_for :simple_header, true %>

<% content_for :extra_headers do %>
  <% if @content_item.description.present? %>
    <meta name='description' content='<%= @content_item.description %>' />
  <% end %>
<% end %>


<% content_for :page_title, "#{@content_item.title} - Contact #{@content_item.organisation.title}" %>


<div class="grid-row">
  <div class="column-two-thirds">

    <header class="header-block">
      <h1><%= @content_item.title %></h1>
    </header>

    <div class="beta-wrapper">
      <%= render 'govuk_component/beta_label' %>
    </div>

    <div>
      <%= render "content_items/contact/contact_details", content_item: @content_item %>
    </div>

    <% if @content_item.query_response_time %>
      <p class="response"><%= link_to "Find out when to expect a response to your query", "http://www.hmrc.gov.uk/tools/progress-tool/index.htm" %></p>
    <% end -%>

  </div>

  <div class="related-container column-one-third">

    <%= render partial: "govuk_component/related_items", locals: {sections: @content_item.related_links }%>
  </div>

</div>
