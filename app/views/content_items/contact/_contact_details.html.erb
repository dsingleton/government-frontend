<% if content_item.contact_form_links.any? %>
  <div class="online-forms govuk-govspeak">
    <h2>Online forms</h2>
    <ul class="form-links">
      <%= render partial: "content_items/contact/contact_form_link", collection: content_item.contact_form_links %>
    </ul>
    <div class="govuk-govspeak">
      <%= raw content_item.more_info_contact_form %>
    </div>
  </div>
<% end -%>

<% if content_item.email_addresses.any? %>
  <h2 class="details-header">Email</h2>
  <div class="details">
    <ul class="email">
      <%= render partial: "content_items/contact/email_address", collection: content_item.email_addresses %>
    </ul>
    <div class="govuk-govspeak">
      <%= raw content_item.more_info_email_address.to_s %>
    </div>
  </div>
<% end %>

<% if content_item.show_webchat? %>
  <h2 class="details-header">Webchat</h2>
  <div class="details js-webchat">
    <div class="description govuk-govspeak">
      <p class="js-webchat-advisers-error">
        Webchat is unavailable at the moment because of technical problems.
      </p>
      <p class="js-webchat-advisers-unavailable hidden">
        Webchat is closed at the moment.
      </p>
      <p class="js-webchat-advisers-busy hidden">
        All webchat advisers are busy at the moment.
      </p>
      <p class="js-webchat-advisers-available hidden">
        Advisers are available to chat. <a href="#" rel="external" class="js-webchat-open-button">Speak to an adviser now</a>.
      </p>
    </div>
  </div>
<% end %>

<% if content_item.phone_numbers.any? %>
  <h2 class="details-header">Phone</h2>
  <div class="details">
    <%= render partial: "content_items/contact/phone_number", collection: content_item.phone_numbers %>
  <div class="govuk-govspeak">
      <%= raw content_item.more_info_phone_number %>
    </div>
  </div>
<% end %>

<% if content_item.post_addresses.any? %>
  <h2 class="details-header">Post</h2>
  <div class="details">
    <%= render partial: "content_items/contact/post_address", collection: content_item.post_addresses %>
    <div class="govuk-govspeak">
      <%= raw content_item.more_info_post_address %>
    </div>
  </div>
<% end %>
